    var append = (append == null) ? "" : append;
    var inputValue = $(append+'#'+input.id).val();
    if(inputValue == ""){
        $(append+'#'+input.id).addClass('errorFocus');
        $(append+'.'+input.id).html(input.label + " " + errorHandler.NOT_EMPTY);
        return 1;
    }else{
