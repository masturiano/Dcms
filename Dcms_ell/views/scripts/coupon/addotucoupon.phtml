        $(append+'.'+input.id).html("");
        return 0;
    }
}

function hasCoupon(){
    var inputData = $("#"+coupon_name.id).val();
    var errorCount = 0;
    jQuery.ajax({
        url: "ajax/?action=checkotucouponname",
        type: "GET",
        data: jQuery("#addcoupon_id").serialize(),
        async: false,

        success: function(data){
            if(data>0){
                $('#'+coupon_name.id).addClass('errorFocus');
